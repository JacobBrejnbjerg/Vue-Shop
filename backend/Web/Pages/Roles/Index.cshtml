@page
@model Web.Pages.Roles.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1 class="bg-info text-white">All Roles</h1>
<form method="post">
    <button asp-page="./Create" class="btn btn-secondary">Create a Role</button>
</form>
<table class="table table-sm table-bordered table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Users</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var role in Model.Roles)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td>
      
                    <a asp-page="Update" asp-route-id="@role.Id" class="btn btn-sm btn-primary">Update</a>
        
            </td>
            <td>
                <form method="post">
                    <button asp-page-handler="Delete" asp-page="Delete" asp-route-id="@role.Id" type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>