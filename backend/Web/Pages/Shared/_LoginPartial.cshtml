@using Microsoft.AspNetCore.Identity
@using Web.Areas.Identity.Data
@using Web.Extentions
@inject SignInManager<WebIdentityUser> SignInManager
@inject UserManager<WebIdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        WebIdentityUser WebUser = @UserManager.ConvertToWebIdentityUser(User);
        <li class="nav-item">
            <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @WebUser.Name!</a>
        </li>
        <li>
            <!-- Button to Open the Modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" id="ShoppingCartIcon" data-target="#myModal"><i class="fas fa-shopping-cart"></i></button>
        </li>
        <li class="nav-item">
            <form method="get" class="form-inline" asp-area="" asp-page="/Orders/OrderIndex">
                <button id="orderIndex" type="submit" class="nav-link btn btn-link text-white">Gamle ordre</button>
            </form>
        </li>
        <li class="nav-item">
            <form method="get" class="form-inline" asp-area="" asp-page="/Admin/Index">
                <button id="adminIndex" type="submit" class="nav-link btn btn-link text-white">Admin page</button>
            </form>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white">Logout</button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
